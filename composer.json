{
	"name": "dereuromark/cakephp-setup",
	"type": "cakephp-plugin",
	"description": "A CakePHP plugin containing lots of useful management tools",
	"keywords": ["cakephp", "plugin", "setup", "management", "maintenance", "backup", "bake", "templates"],
	"homepage": "https://github.com/dereuromark/cakephp-setup",
	"license": "MIT",
	"authors": [
		{
			"name": "Mark Scherer",
			"role": "Author",
			"homepage": "http://www.dereuromark.de"
		}
	],
	"require": {
		"php": ">=5.6",
		"cakephp/cakephp": "^3.4"
	},
	"require-dev": {
		"dereuromark/cakephp-tools": "^1.1",
		"fig-r/psr2r-sniffer": "dev-master"
	},
	"autoload": {
		"psr-4": {
			"Setup\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Setup\\Test\\": "tests",
			"Cake\\Test\\": "vendor/cakephp/cakephp/tests",
			"TestApp\\": "tests/TestApp"
		}
	},
	"support":{
		"source": "https://github.com/dereuromark/cakephp-setup",
		"issues": "https://github.com/dereuromark/cakephp-setup/issues"
	},
	"scripts": {
		"test": "php phpunit.phar",
		"test-setup": "[ ! -f phpunit.phar ] && wget https://phar.phpunit.de/phpunit-5.7.phar && mv phpunit-5.7.phar phpunit.phar || true",
		"cs-check": "phpcs -p --standard=vendor/fig-r/psr2r-sniffer/PSR2R/ruleset.xml --ignore=/cakephp-setup/vendor/,/tmp/,/logs/,tests/test_files/ --extensions=php ./",
		"cs-fix": "phpcbf -f --standard=vendor/fig-r/psr2r-sniffer/PSR2R/ruleset.xml --ignore=/cakephp-setup/vendor/,/tmp/,/logs/,tests/test_files/ --extensions=php ./"
	}
}
